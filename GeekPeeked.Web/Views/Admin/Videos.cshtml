@model VideosViewModel

@{
    ViewBag.Title = "Genres List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 pull-right">
            <a href="@Url.Action("Index")" class="btn btn-block btn-default">Back to Admin</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>GeekPeeked Videos List (@Model.Videos.Count results)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped results">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Key</th>
                            <th>Name</th>
                            <th>Site</th>
                            <th>Size</th>
                            <th>Type</th>
                            <th>Movie Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var video in Model.Videos.OrderByDescending(c => c.Movies.Count))
                        {
                            <tr>
                                <td>
                                    @video.Id
                                </td>
                                <td>
                                    @video.Key
                                </td>
                                <td>
                                    @video.Name
                                </td>
                                <td>
                                    @video.Site
                                </td>
                                <td>
                                    @video.Size
                                </td>
                                <td>
                                    @video.Type
                                </td>
                                <td>
                                    @video.Movies.Count
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

