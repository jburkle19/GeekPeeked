@model CertificationsViewModel

@{
    ViewBag.Title = "Certifications List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 pull-right">
            <a href="@Url.Action("Index")" class="btn btn-block btn-default">Back to Admin</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>GeekPeeked Certifications List (@Model.GeekPeekedCertifications.Count results)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped results">
                    <thead>
                        <tr>
                            <th>Country</th>
                            <th>Type Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Movie Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cert in Model.GeekPeekedCertifications.OrderBy(c => c.TypeId).OrderBy(c => c.Country))
                        {
                            <tr>
                                <td>
                                    @cert.Country
                                </td>
                                <td>
                                    @cert.TypeId
                                </td>
                                <td>
                                    @cert.Name
                                </td>
                                <td>
                                    @cert.Description
                                </td>
                                <td>
                                    @cert.Movies.Count
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

