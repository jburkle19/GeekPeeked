@model CreditsViewModel

@{
    ViewBag.Title = "Credits List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 pull-right">
            <a href="@Url.Action("Index")" class="btn btn-block btn-default">Back to Admin</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>GeekPeeked Credits List (@Model.Credits.Count results)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped results">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Movie</th>
                            <th>Character</th>
                            <th>Department</th>
                            <th>Job Title</th>
                            <th>Credit Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var credit in Model.Credits.OrderBy(c => c.Sequence))
                        {
                            <tr>
                                <td>
                                    @credit.Id
                                </td>
                                <td>
                                    @credit.Person.Name
                                </td>
                                <td>
                                    @credit.Movie.Title
                                </td>
                                <td>
                                    @credit.CharacterName
                                </td>
                                <td>
                                    @credit.Department
                                </td>
                                <td>
                                    @credit.JobTitle
                                </td>
                                <td>
                                    @credit.CreditId
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

